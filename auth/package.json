{
  "name": "expressjs-starter",
  "version": "1.0.0",
  "description": "This is app helps you to quickly boostrap expressjs app. It follows modular monolith pattern.",
  "main": "app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate:up": "npx sequelize-cli db:migrate",
    "load:doc": "node scripts/dist.doc.js",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && babel src --out-dir dist && npm run load:doc",
    "dev": "nodemon --watch src --exec ts-node src/bin/index.ts",
    "start:dev": "nodemon --watch src --exec babel-node src/bin",
    "start": "npm run build && node dist/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pomile/expressjs-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pomile/expressjs-starter/issues"
  },
  "homepage": "https://github.com/Pomile/expressjs-starter#readme",
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.18.9",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.9",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "@types/validator": "^13.7.14",
    "babel-core": "^7.0.0-bridge.0",
    "babel-register": "^6.26.0",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.4",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.7",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.8",
    "nodemailer-express-handlebars": "^5.0.0",
    "nodemon": "^2.0.19",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.30.0",
    "sequelize-typescript": "^2.1.5",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0"
  }
}
